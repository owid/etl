{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(find:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "remote-setup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/remote_setup.sh"
          }
        ]
      }
    ]
  }
}
