{
  "esbonio.sphinx.confDir": "",
  "files.associations": {
    "*.dvc": "yaml"
  },
  "files.trimTrailingWhitespace": true,
  "yaml.schemas": {
    "schemas/snapshot-schema.json": "**/*.dvc",
    "schemas/dataset-schema.json": [
      "**/*.meta.yml",
      "**/*.meta.override.yml"
    ],
    "schemas/multidim-schema.json": "export/multidim/**/*.yml",
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "flake8.ignorePatterns": [
    "**/*"
  ],
  "pylint.ignorePatterns": [
    "**/*"
  ],
  "grammarly.files.include": [
    "**/README.md",
    "**/readme.md",
    "**/*.txt",
    "**/docs/*.md",
    "**/docs/adding-data/*.md",
    "**/docs/adding-data/*.md",
    "**/docs/getting-started/*.md",
    "**/docs/api/*.md",
    "**/docs/architecture/*.md"
  ],
  "files.exclude": {
    "**/dataset_*_config.json": true,
    "**/dataset_*_values.json": true,
    "**/dataset_*.json.dvc": true,
    "**/dataset_*.feather.dvc": true
  },
  "yaml.format.printWidth": 999,
  "ruff.path": [
    ".venv/bin/ruff"
  ]
}
