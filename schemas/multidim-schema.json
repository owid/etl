{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "definitions": {
      "type": "object",
      "description": "Definitions with anchors that are reused in other parts of the metadata",
      "additionalProperties": true
    },
    "title": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "titleVariant": { "type": "string" }
      },
      "required": ["title", "titleVariant"]
    },
    "dimensions_title": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "defaultSelection": {
      "type": "array",
      "items": { "type": "string" }
    },
    "topicTags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "dimensions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slug": { "type": "string" },
          "name": { "type": "string" },
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "slug": { "type": "string" },
                "name": { "type": "string" },
                "group": { "type": "string" },
                "description": { "type": ["string", "null"] }
              },
              "required": ["slug", "name"]
            }
          }
        },
        "required": ["slug", "name"]
      }
    },
    "views": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "dimensions": {
            "type": "object",
            "properties": {
              "source": { "type": "string" },
              "metric": { "type": "string" }
            },
            "required": ["metric"]
          },
          "indicators": {
            "type": "object",
            "properties": {
              "y": { "type": ["string", "array"], "items": { "type": "string" } }
            },
            "required": ["y"]
          }
        }
      }
    }
  },
  "required": ["title", "defaultSelection", "dimensions", "views"]
}
