{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "definitions": {
      "type": "object",
      "description": "Definitions with anchors that are reused in other parts of the metadata",
      "additionalProperties": true
    },
    "title": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "titleVariant": { "type": "string" }
      },
      "required": ["title", "titleVariant"]
    },
    "dimensions_title": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "defaultSelection": {
      "type": "array",
      "items": { "type": "string" }
    },
    "topicTags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "dimensions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slug": { "type": "string" },
          "name": { "type": "string" },
          "group": { "type": "string" },
          "description": { "type": ["string", "null"] },
          "multi_select": { "type": "boolean" },
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "slug": { "type": "string" },
                "name": { "type": "string" },
                "group": { "type": "string" },
                "description": { "type": ["string", "null"] }
              },
              "required": ["slug", "name"]
            }
          }
        },
        "required": ["slug", "name"]
      }
    },
    "views": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "dimensions": {
            "type": "object",
            "properties": {
              "source": { "type": "string" },
              "metric": { "type": "string" }
            },
            "required": ["metric"]
          },
          "indicators": {
            "type": "object",
            "properties": {
              "y": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "array", "items": { "type": "string" } }
                ]
              },
              "x": { "type": ["string", "null"] },
              "size": { "type": ["string", "null"] },
              "color": { "type": ["string", "null"] }
            },
            "required": ["y"]
          },
          "config": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "subtitle": { "type": "string" }
            }
          }
        }
      }
    },
    "faqEntries": {
      "type": "object",
      "properties": {
        "faqs": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string" },
                  "content": { "type": "string" }
                },
                "required": ["type", "content"]
              }
            }
          }
        }
      }
    },
    "primaryTopic": {
      "type": ["object", "null"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "additionalProperties": true
    },
    "initialQueryStr": { "type": "string" },
    "canonicalUrl": { "type": "string" },
    "isPreviewing": { "type": "boolean" }
  },
  "required": ["title", "defaultSelection", "dimensions", "views"]
}
