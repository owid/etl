{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
      "dataset": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "update_period": {
            "type": "integer"
          },
          "licenses": {
            "type": "array",
            "items": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  }
                },
                "required": ["url"]
              }
            ]
          },
          "sources": {
            "type": "array",
            "items": [
              {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  },
                  "owid_data_url": {
                    "type": "string"
                  },
                  "source_data_url": {
                    "type": "string"
                  },
                  "date_accessed": {
                    "anyOf": [
                      {
                          "type": "string",
                          "format": "date"
                      },
                      {
                          "type": "string",
                          "pattern": "^\\{.*\\}$"
                      }
                    ]
                  },
                  "description": {
                    "type": "string"
                  },
                  "publication_year": {
                    "type": "integer"
                  },
                  "publication_date": {
                    "anyOf": [
                      {
                          "type": "string",
                          "format": "date"
                      },
                      {
                          "type": "string",
                          "pattern": "^\\{.*\\}$"
                      }
                    ]
                  },
                  "published_by": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            ]
          }
        }
      },
      "tables": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[a-z0-9_]*$"
        },
        "additionalProperties": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "variables": {
              "type": "object",
              "propertyNames": {
                "pattern": "^[a-z0-9_]*$"
              },
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "unit": {
                    "type": ["string", "null"]
                  },
                  "short_unit": {
                    "type": ["string", "null"]
                  },
                  "description": {
                    "type": ["string", "null"]
                  },
                  "sources": {
                    "type": "array",
                    "items": [
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string"
                          },
                          "owid_data_url": {
                            "type": "string"
                          },
                          "source_data_url": {
                            "type": "string"
                          },
                          "date_accessed": {
                            "anyOf": [
                              {
                                  "type": "string",
                                  "format": "date"
                              },
                              {
                                  "type": "string",
                                  "pattern": "^\\{.*\\}$"
                              }
                            ]
                          },
                          "description": {
                            "type": "string"
                          },
                          "publication_year": {
                            "type": "integer"
                          },
                          "publication_date": {
                            "anyOf": [
                              {
                                  "type": "string",
                                  "format": "date"
                              },
                              {
                                  "type": "string",
                                  "pattern": "^\\{.*\\}$"
                              }
                            ]
                          },
                          "published_by": {
                            "type": "string"
                          }
                        },
                        "required": ["name"]
                      }
                    ]
                  },
                  "licenses": {
                    "type": "array",
                    "items": [
                      {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string"
                          }
                        },
                        "required": ["url"]
                      }
                    ]
                  },
                  "display": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "entityAnnotationsMap": {
                        "type": "string"
                      },
                      "numDecimalPlaces": {
                        "type": "integer"
                      },
                      "conversionFactor": {
                        "type": "number"
                      },
                      "includeInTable": {
                        "type": "boolean"
                      },
                      "unit": {
                        "type": "string"
                      },
                      "yearIsDay": {
                        "type": "boolean"
                      },
                      "zeroDay": {
                        "type": "string",
                        "format": "date"
                      },
                      "tolerance": {
                        "type": "number"
                      },
                      "isProjection": {
                        "type": "boolean"
                      }
                    }
                  },
                  "origins": {
                    "type": "array",
                    "items": [
                      {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                          "dataset_title_owid": {
                            "type": "string"
                          },
                          "dataset_title_producer": {
                            "type": "string"
                          },
                          "dataset_description_owid": {
                            "type": "string"
                          },
                          "dataset_description_producer": {
                            "type": "string"
                          },
                          "producer": {
                            "type": "string"
                          },
                          "citation_producer": {
                            "type": "string"
                          },
                          "dataset_url_main": {
                            "type": "string"
                          },
                          "dataset_url_download": {
                            "type": "string"
                          },
                          "date_accessed": {
                            "type": "string",
                            "format": "date"
                          },
                          "date_published": {
                            "type": "string",
                            "format": "date"
                          }
                        }
                      }
                    ]
                  },
                  "processing_level": { "type": "string", "enum": ["minor", "medium", "major"] },
                  "presentation": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "title_public": { "type": "string" },
                      "title_variant": { "type": "string" },
                      "citation_inline": { "type": "string" },
                      "description_short": { "type": "string" },
                      "description_from_producer": { "type": "string" },
                      "topic_tags_links": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "faqs": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "gdoc_id": { "type": "string" },
                            "fragment_id": { "type": "string" }
                          }
                        }
                      },
                      "key_info_text": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "grapher_config": {
                        "type": "object",
                        "additionalProperties": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
